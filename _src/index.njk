  </div>
</section>

<section id="featured-posts" class="mt3 bt1 bb1 py3 bggray bg100">
  <div class="container wlg">
    <div class="longread">
      <p class="h2 m0 mb3 center uppercase">Featured Posts</p>
    </div>
    <div class="sm:grid2cols md:grid3cols gap">
      {% set postslist = collections.featuredPosts %}
      {% for post in postslist | reverse %}
      {% include "_includes/post-card.njk" %}
      {% endfor %}
    </div>
  </div>
</section>

<section id="homepage-latest-posts" class="container wlg mt3">
  <p class="h3 mt4 mb2 center uppercase">Latest Posts</p>
  <div class="sm:grid2cols md:grid3cols gap">
    {% set postslist = collections.posts | head(-3) %}
    {% for post in postslist | reverse %}
    {% include "_includes/post-card.njk" %}
    {% endfor %}
  </div>

  <div class="my3 center">
    <p class="h3">
      <a class="noline" href="/posts/">More posts&nbsp; ⮕</a>
    </p>
  </div>
</section>
